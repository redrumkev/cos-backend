##############################################
# üîç COS DATABASE CONFIGURATION (POSTGRESQL)
##############################################
# PostgreSQL user for all database connections
POSTGRES_USER=cos_user

# Database passwords for different environments
POSTGRES_PASSWORD_PROD={POSTGRES_PASSWORD_PROD_HERE}     # Production database password
POSTGRES_PASSWORD_DEV={POSTGRES_PASSWORD_DEV_HERE}       # Development database password
# POSTGRES_PASSWORD_TEST={POSTGRES_PASSWORD_TEST_HERE}   # Test database password (optional)

# Database connection URLs (AsyncPG for app, Psycopg for migrations)
POSTGRES_DEV_URL=postgresql+asyncpg://{POSTGRES_USER}:{POSTGRES_PASSWORD_DEV}@localhost:{POSTGRES_PORT_DEV}/{POSTGRES_DB_DEV}
# POSTGRES_TEST_URL=postgresql+asyncpg://{POSTGRES_USER}:{POSTGRES_PASSWORD_TEST}@localhost:{POSTGRES_PORT_TEST}/{POSTGRES_DB_TEST}
POSTGRES_MIGRATE_URL=postgresql+psycopg://{POSTGRES_USER}:{POSTGRES_PASSWORD_DEV}@localhost:{POSTGRES_PORT_DEV}/{POSTGRES_DB_DEV}

# Application expects DATABASE_URL_DEV (maps to POSTGRES_DEV_URL)
DATABASE_URL_DEV=postgresql+asyncpg://{POSTGRES_USER}:{POSTGRES_PASSWORD_DEV}@localhost:{POSTGRES_PORT_DEV}/{POSTGRES_DB_DEV}

# Database names
POSTGRES_DB_PROD=cos_db_prod                # Production database name
POSTGRES_DB_DEV=cos_db_dev                  # Development database name
# POSTGRES_DB_TEST=cos_db_test              # Test database name (optional)

# Database ports
POSTGRES_PORT_PROD=5432                     # Production PostgreSQL port
POSTGRES_PORT_DEV=5433                      # Development PostgreSQL port
# POSTGRES_PORT_TEST=5434                   # Test PostgreSQL port (optional)

##############################################
# üîç COS POSTGRESQL - AGENT-BASED TEST CONFIG
##############################################
# Agent-based database connection for testing
AGENT_DB_URL=agent://localhost:8000/database
AGENT_TEST_URL=agent://localhost:8000/test-database
AGENT_POOL_SIZE=5                           # Connection pool size
AGENT_POOL_TIMEOUT=30                       # Pool timeout in seconds
AGENT_POOL_MAX_OVERFLOW=10                  # Maximum overflow connections

##############################################
# üü° MEM0 SCHEMA
##############################################
# Schema name for Mem0 integration
MEM0_SCHEMA=mem0_cc

##############################################
# üî¥ REDIS STACK
##############################################
# Redis connection settings
REDIS_HOST=redis                            # Redis hostname (use 'localhost' for local dev)
REDIS_PORT=6379                             # Redis port
REDIS_PASSWORD={REDIS_PASSWORD_HERE}        # Redis password (required for production)

##############################################
# üü¢ NEO4J GRAPH DATABASE
##############################################
# Neo4j connection settings
NEO4J_URI=bolt://neo4j:7687                # Neo4j Bolt protocol URI
NEO4J_USER=neo4j                           # Neo4j username
NEO4J_PASSWORD={NEO4J_PASSWORD_HERE}       # Neo4j password

##############################################
# üì¶ ELASTICSEARCH
##############################################
# Elasticsearch connection settings
ELASTICSEARCH_HOST=http://elasticsearch:9200    # Elasticsearch host URL
ELASTICSEARCH_PORT=9200                         # Elasticsearch port

##############################################
# üéØ QDRANT VECTOR DATABASE
##############################################
# Qdrant vector database settings
QDRANT_HOST=localhost                       # Qdrant hostname
QDRANT_PORT=6333                           # Qdrant port
# QDRANT_API_KEY={QDRANT_API_KEY_HERE}     # Optional: For production authentication

##############################################
# ü§ñ LLM API KEYS (INFERENCE USE)
##############################################
# API keys for various LLM providers
OPENAI_API_KEY={OPENAI_API_KEY_HERE}                # OpenAI API key
ANTHROPIC_INFERENCE_KEY={ANTHROPIC_API_KEY_HERE}    # Anthropic Claude API key
GEMINI_API_KEY={GEMINI_API_KEY_HERE}                # Google Gemini API key
# MISTRAL_API_KEY={MISTRAL_API_KEY_HERE}            # Mistral AI API key (optional)
# COHERE_API_KEY={COHERE_API_KEY_HERE}              # Cohere API key (optional)

##############################################
# üß™ GENERAL ENVIRONMENT SETTINGS
##############################################
# Application environment settings
ENV=development                             # Environment: development, staging, production
LOG_LEVEL=debug                            # Logging level: debug, info, warning, error
PROJECT_NAME=cos                           # Project name identifier

##############################################
# üîç LOGFIRE API KEY
##############################################
# Logfire distributed tracing
LOGFIRE_API_KEY={LOGFIRE_API_KEY_HERE}     # Logfire API key for observability

##############################################
# üñ•Ô∏è PLATFORM-SPECIFIC DOCKER MOUNT PATHS
##############################################
# macOS: Flat directory structure under ~/cos-data/
COS_DATA_ROOT=~/cos-data                   # Root directory for all COS data
COS_POSTGRES_ROOT=${COS_DATA_ROOT}/postgres        # PostgreSQL data directory
COS_REDIS_ROOT=${COS_DATA_ROOT}/redis              # Redis data directory
COS_NEO4J_ROOT=${COS_DATA_ROOT}/neo4j              # Neo4j data directory
COS_ELASTICSEARCH_ROOT=${COS_DATA_ROOT}/elasticsearch    # Elasticsearch data directory
COS_QDRANT_ROOT=${COS_DATA_ROOT}/qdrant            # Qdrant data directory

# Platform identifier
PLATFORM=macos                             # Platform: macos, linux, windows (deprecated)
